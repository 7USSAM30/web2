
@{
    ViewData["Title"] = "Register";
}
<h1>Register</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div class="form-group">
                First Name: <input name="fname" class="form-control" />

            </div>

            <div class="form-group">

                Last Name: <input name="lname" class="form-control"/>
            </div>

            <div class="form-group">
                Email: <input name="email" type="email" class="form-control" />
            </div>

            <div class="form-group">
                Education <select class="form-control" name="education">
                    <option value="HighSchool">high school</option>
                    <option value="Universty">universty</option>
                </select>
            </div>
            <div class="checkbox">
                <label><input type="radio" name="gender" value="male" checked />Male</label>

            </div>

            <div class="checkbox">
                <label><input type="radio" name="gender" value="female" />Female</label>

            </div>

            <div class="checkbox">
                <label><input type="checkbox" name="married" value="true" />Married</label>

            </div>

            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h2>User entere @ViewData["detail"]</h2>

