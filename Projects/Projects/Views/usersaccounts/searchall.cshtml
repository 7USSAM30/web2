@model Projects.Models.usersaccounts
@{
    ViewData["Title"] = "searchall";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>searchall</h1>
<form asp-action="SearchAll">
    <div class="form-group">
    </div>
    <div class="form-group">
        <label class="control-label">Select Catagory</label>
        <select class="form-control" name="role" id="ca" onchange="gettitle()">
            <option value="0">Please Role</option>
            <option value="admin">Admin</option>
            <option value="customer">Customer</option>
        </select>

    </div>
    <div class="form-group">
        <label class="control-label">Select name</label>
        <select class="form-control" name="name" id="ti" > </select>

    </div>
    <input type="submit" value="Show" class="btn btn-default" />
</form>
<script>
    async function gettitle() {
        var cc = document.getElementById('ca').value;
        var response = await fetch('/getnameAPI/' + cc);
        let x = await response.json();
        var dd = "<option> Please select</option>";
        for (i = 0; i < x.length; i++) {
            dd += "<option>" + x[i].name + "</option>";
        }
        document.getElementById("ti").innerHTML = dd;
    }

   

</script>
<div>
    <h4>users</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.pass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.pass)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.role)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegistDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistDate)
        </dd>
        </dl>

       
</div>
